<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MikedropActivity" android:textAlignment="center">
    <Button
            android:text="Map"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/mapButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="233dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="348dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp" android:layout_marginEnd="220dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Weather"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/weatherButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="233dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="348dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="227dp" android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Events"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/eventsButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="396dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="185dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp" android:layout_marginEnd="220dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Dining"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/diningButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="396dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="185dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="227dp" android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="MIKEDROP"
            android:layout_width="401dp"
            android:layout_height="50dp" android:id="@+id/header"
            android:background="#E4D64F" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textSize="48sp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="673dp" android:layout_marginStart="5dp" android:layout_marginEnd="2dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Select an option"
            android:layout_width="413dp"
            android:layout_height="81dp" android:id="@+id/footer"
            android:background="#E4D64F" android:textAlignment="center"
            android:textSize="48sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="654dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="output"
            android:layout_width="333dp"
            android:layout_height="30dp" android:id="@+id/message"
            android:textAlignment="center" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="602dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>